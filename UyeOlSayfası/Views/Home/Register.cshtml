@using System.Runtime.InteropServices


@model UyeOlSayfası.Models.RegisterViewModel


@{
    Layout = null;
}
<link rel="stylesheet" href="/Content/register.css">
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">


<div class="container">
    <div class="card bg-light">
        <article class="card-body mx-auto" style="max-width: 400px;">
            <h4 class="card-title mt-3 text-center">Hesap Oluştur</h4>

            <p>
                <a href="" class="btn btn-block btn-twitter"> <i class="fab fa-twitter"></i> Twitter İle Gİriş </a>
                <a href="" class="btn btn-block btn-facebook"> <i class="fab fa-facebook-f"></i> FaceBook İle Giriş </a>
            </p>
            <p class="divider-text">
                <span class="bg-light">Veya</span>
            </p>
            @using (Html.BeginForm())
            {
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="fa fa-user"></i>
                        </span>
                    </div>
                    @Html.TextBoxFor(x => x.Name, new {@class = "form-control", required = "required", placeholder = "Adınızı Giriniz"})
                </div>
                <!-- form-group// -->
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="fa fa-envelope"></i>
                        </span>
                    </div>
                    @Html.TextBoxFor(x => x.Email, new {@class = "form-control", required = "required", placeholder = "E-Mail Adresini  Giriniz"})
                </div>
                <!-- form-group// -->
                <div class="form-group input-group">
                    <div class="input-group-pr epend">
                        <span class="input-group-text">
                            <i class="fa fa-phone"></i>
                        </span>
                    </div>
                    <select class="custom-select" style="max-width: 120px;">
                        <option selected="">+90</option>
                        <option value="1">+91</option>
                        <option value="2">+92</option>
                        <option value="3">+93</option>
                    </select>
                    @Html.TextBoxFor(x => x.Email, new {@class = "form-control", type="email", required = "required", placeholder = "Telefon Numarası"})

                </div>
                <!-- form-group// -->
                <div class="form-group input-group">
                </div>
                <!-- form-group end.// -->
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="fa fa-lock"></i>
                        </span>
                    </div>
                    @Html.TextBoxFor(x => x.Email, new {@class = "form-control", type = "password", required = "required", placeholder = "Şifreniz"})

                </div>
                <!-- form-group// -->
                <div class="form-gr input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="fa fa-lock"></i>
                        </span>
                    </div>
                    @Html.TextBoxFor(x => x.Email, new {@class = "form-control", type = "password", required = "required", placeholder = "Şifreniz tekrar"})

                </div>
                <!-- form-group// -->
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block"> Kayıt ol </button>
                </div>
                <!-- form-group// -->
                <p class="text-center">Have an account? <a href="">Giriş Yap</a> </p>
            }
        </article>
    </div> <!-- card.// -->

</div>
<!--container end.//-->